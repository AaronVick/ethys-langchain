# ETHYS x402 Configuration
# Copy this file to .env and fill in your values

# Base URL for ETHYS API (default: https://402.ethys.dev)
ETHYS_BASE_URL=https://402.ethys.dev

# API Key (optional, wallet signature preferred)
# ETHYS_API_KEY=your_api_key_here

# Request timeout in seconds (default: 30.0)
ETHYS_TIMEOUT=30.0

# Maximum retries for failed requests (default: 3)
ETHYS_MAX_RETRIES=3

# Chain ID (Base mainnet: 8453)
ETHYS_CHAIN_ID=8453

# Contract addresses (defaults provided, usually don't need to change)
# ETHYS_TOKEN_ADDRESS=0x1Dd996287dB5a95D6C9236EfB10C7f90145e5B07
# ETHYS_TIER_PURCHASE_V1_ADDRESS=0x5BA13d7183603cB42240a80Fe76A73D7750287Ec
# ETHYS_TIER_PURCHASE_V2_ADDRESS=0x1AB4434AF31AF4b8564c4bB12B6aD417B97923b8

# For live integration tests (optional)
# ETHYS_LIVE_BASE_URL=https://402.ethys.dev
